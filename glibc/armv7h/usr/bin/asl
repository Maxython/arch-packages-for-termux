
if [[ ! -d /data/data/com.termux/files/usr/lib/conlib ]]; then
  echo 'error: conlib directory not found.'
  exit 2
fi

if [[ -z $* ]]; then
  echo "$0 [COMMAND]"
  echo 'The command making access to the conlib libraries.'
  echo 'glibc v2.32-2 armv7h'
  echo 'official site: https://www.gnu.org/software/libc'
  echo 'GNU site: https://www.gnu.org'
else
  if [[ -n $LD_PRELOAD ]]; then
    unset LD_PRELOAD
  fi
  export LD_LIBRARY_PATH="/data/data/com.termux/files/usr/lib/conlib:/data/data/com.termux/files/usr/lib"
  export LIBRARY_PATH="/data/data/com.termux/files/usr/lib/conlib:/data/data/com.termux/files/usr/lib"
  export SHELL="/data/data/com.termux/files/usr/bin/bash"
  $*
fi
