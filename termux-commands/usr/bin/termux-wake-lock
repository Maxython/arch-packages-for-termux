#!/data/data/com.termux/files/usr/bin/bash
if [ `/system/bin/getconf LONG_BIT` = "64" ]; then
        export LD_LIBRARY_PATH="/system/lib64" LIBRARY_PATH="/system/lib64"
else
        export LD_LIBRARY_PATH="/system/lib" LIBRARY_PATH="/system/lib"
fi
export PATH="/system/bin"

if [ $# != 0 ]; then
	echo 'usage: termux-wake-lock'
	echo 'Acquire the Termux wake lock to prevent the CPU from sleeping.'
	exit 1
fi

am startservice \
	--user 0 \
	-a com.termux.service_wake_lock \
	com.termux/com.termux.app.TermuxService \
	> /dev/null
